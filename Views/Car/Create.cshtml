


@model CAR_RENTAL_SERVICE.Models.Car
@{
    ViewData["Title"] = "Create";
}


<form method="post" asp-controller="Car" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h1 class="text-info p1-3">Create</h1>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="RegistrationNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="RegistrationNumber" class="form-control" />
                        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ModelName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ModelName" class="form-control" />
                        <span asp-validation-for="ModelName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Make"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Make" class="form-control" />
                        <span asp-validation-for="Make" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ModelYear"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ModelYear" class="form-control" />
                        <span asp-validation-for="ModelYear" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Mileage"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Mileage" class="form-control" />
                        <span asp-validation-for="Mileage" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    @*<div class="col-6 offset-4 row">*@
                    <div class="col-4 offset-4">
                        <input type="submit" class="btn btn-info w-100" value="Add Car" />
                    </div>
                    <div class="col">
                        @if (ViewBag.Message != null)
                        {
                            //<a class="nav-link text-dark btn-primary font-weight-bold" style="margin: 10px; background-color: #ffdd0f;top: 2px " asp-area="" asp-controller="Admin" asp- asp-action="Get">Get All Products</a>
                            <a class="nav-link text-dark btn-primary font-weight-bold" style="position: relative; margin: 10px; background-color: #ff8d00;float: right" asp-area="" asp-controller="Car" asp- asp-action="Get"> Get Cars</a>
                            <script type="text/javascript">
                                                window.onload = function () {
                                                alert("@ViewBag.Message");
                                                };
                            </script>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
        </div>
    </div>
    </div>
</form>
