
@model IEnumerable<CAR_RENTAL_SERVICE.Models.DriverDetail>

@{
    ViewData["Title"] = "DriverDetail";
}

<div class="col-6">
    <h2 class="text-primary">DriverDetail</h2>
</div>

<div class="container p-3">
    <div class="row pt-4">
        @*<div class="col-6">
            <h4>Product List</h4>
        </div>*@
        <div>
            <a class="nav-link text-dark btn-primary font-weight-bold" style="position: relative; margin: 10px; background-color: #ff8d00;float: right" asp-area="" asp-controller="DriverDetail" asp- asp-action="Create">Register</a>
        </div>
        @*<div>
            <a class="nav-link text-dark btn-primary font-weight-bold" style="position: relative; margin: 10px; background-color: #ff8d00;float: right" asp-area="" asp-controller="Admin" asp- asp-action="Addproduct">Add Category</a>
        </div>*@
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Driver_DLNumber
                    </th>
                    <th>
                        FirstName
                    </th>
                    <th>
                        LastName
                    </th>
                    <th>
                        PhoneNumber
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        StateName
                    </th>
                    <th>
                        Zipcode
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="10%">@obj.Driver_DLNumber</td>
                        <td width="10%">@obj.FirstName</td>
                        <td width="10%">@obj.LastName</td>
                        <td width="10%">@obj.PhoneNumber</td>
                        <td width="10%">@obj.City</td>
                        <td width="10%">@obj.StateName</td>
                        <td width="10%">@obj.Zipcode</td>


                        <td class="text-center">
                         <div class="w-75 btn-group" role="group">
                            <a asp-controller="DriverDetail" asp-route-Id="@obj.Driver_DLNumber" asp-action="Update" class="btn btn-primary mx-1">
                                <i class="fas fa-edit"></i> Update
                            </a>
                            <a asp-controller="DriverDetail" asp-route-Id="@obj.Driver_DLNumber" asp-action="Delete" class="btn btn-danger mx-3">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>


